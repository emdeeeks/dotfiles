# Home sweet home
alias ~="cd $HOME"

# Or the sites folder for that matter
alias cds="cd ~/Sites"

# So mutt downloads attachments to the correct folder
#alias mutt='cd ~/.mutt/attachments && ~/src/mutt-kz/mutt'

# Basics
alias cp='cp -ir'
alias mv='mv -i'
alias rm='rm -i'
alias ln='ln -i'
alias df='df -H'
alias du='du -c -h'
alias mkdir='mkdir -p -v'

# What's my IP?
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'

# What's all the IPs of my interfaces?
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# Pure laziness.
alias ..='cd ..'
alias ...='cd ../..'
alias -- -="cd -"

# What folders are taking up the most space?
alias dux='du -x --max-depth=1 | sort -n'

# Run last command as sudo
alias ffs='sudo `fc -n -l -1`'

# Kill a process
alias fuck='pkill -9'

# FOCUS! 
alias focus='mpv https://youtu.be/F5Tt3LoygCQ --no-video'
